.SignupPage
  .signheader
    %b.sign 新規登録
  .form-group
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group
        %label ニックネーム
        = f.text_field :nickname, class:"form-control", placeholder: "ニックネームを入力してください", autofocus: true, autocomplete: "nickname"
        %label Eメール
        = f.email_field :email, class:"form-control", placeholder: "Eメールを入力してください", autofocus: true, autocomplete: "email"
        %label パスワード
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上で入力してください)
        = f.password_field :password, class:"form-control", placeholder: "6文字以上", autocomplete: "new-password"
        %label 再度入力してくだい
        = f.password_field :password_confirmation, class:"form-control", placeholder: "パスワードを入力して下さい", autocomplete: "new-password"
      .actions
        = f.submit "Sign up", class: "submitbtn"
    -# = render "devise/shared/links"
